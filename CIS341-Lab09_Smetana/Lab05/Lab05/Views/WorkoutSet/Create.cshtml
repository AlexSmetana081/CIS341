@model Lab05.ViewModels.WorkoutSetDTO

@{
    ViewData["Title"] = "Create";
}

<h2>Create WorkoutSet</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="WorkoutId" class="control-label"></label>
        <select class="form-select" asp-for="WorkoutId" asp-items="ViewBag.WorkoutList">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ExerciseId" class="control-label"></label>
        <select class="form-select" asp-for="ExerciseId" asp-items="ViewBag.ExerciseList">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Reps"></label>
        <input asp-for="Reps" class="form-control" />
        <span asp-validation-for="Reps" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sets"></label>
        <input asp-for="Sets" class="form-control" />
        <span asp-validation-for="Sets" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
