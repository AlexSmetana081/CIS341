<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab05</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lab05.styles.css" asp-append-version="true" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>

    <!-- Navbar -->
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto px-0">
                <div id="sidebar" class="collapse collapse-horizontal show border-end">
                    <div id="sidebar-nav" class="list-group border-0 rounded-0 text-sm-start min-vh-100">

                        <br>
                        <!-- Title -->
                        <div class="nav-header text-light display-6 text-center">Fitness App</div>
                        <br><br>

                        <!-- Homepage -->
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color:white">
                            <i class="bi bi-house-fill"> </i> Home
                        </a>

                        <!-- Progress -->
                        <a class="nav-link" asp-area="" asp-controller="Tracking" asp-action="Progress" style="color:white">
                            <i class="bi bi-calendar2-day-fill"></i>  Progress
                        </a>

                        <!-- Exercise -->
                        <a class="nav-link" asp-area="" asp-controller="Exercise" asp-action="Index" style="color:white">
                            <i class="bi bi-box"></i> Exercises
                        </a>

                        <!-- Trainers -->
                        <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Trainer" style="color:white">
                            <i class="bi bi-person-fill"></i> Trainers
                        </a>

                        <!-- Logout -->
                        <a class="nav-link" asp-area="" asp-controller="Identity" asp-action="Login" style="color:white">
                            <i class="bi bi-box-arrow-in-left"></i> Logout
                        </a>

                        <partial name="_LoginPartial" />

                    </div>
                </div>
            </div>

            <main class="col ps-md-2 pt-2">
                <!-- Button. Will be updated at a later time. -->
                <br>
                <button id="menu-toggle" class="border rounded-3 p-1 text-decoration-none btn-dark">
                    <i class="bi bi-list bi-lg py-2 p-1"></i>
                </button>




                <!-- Renders Page -->
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>

            </main>
        </div>
    </div>




    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Lab05 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
