@model Lab05.Models.Workout

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Workout</h4>
    <hr />
    <dl class="row">

        <!--Name -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <!--Description -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <!-- Exercises -->
        @foreach (var exercise in Model.WorkoutSets)
        {
            <dt class="col-sm-2">
                <label>Exercise</label>
            </dt>

            <dd class="col-sm-10">
                <label>@exercise.Exercise.Name</label>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.WorkoutId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
