@model Lab05.Models.IndexModel

@{
    ViewData["Title"] = "Home Page";
}

<header>
    <!-- Background image -->
    <div class="p-5 text-center bg-image" id="dynamic-bg"
         style="height: 600px; /* Adjust the height as needed */
                background-size: cover;">
        <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);
                height: 500px; ">
            <div class="d-flex justify-content-center align-items-center h-100">
                <div class="text-white">
                    <h1 class="mb-3">Fitness App</h1>
                    <h4 class="mb-3">Where fitness becomes real</h4>

                    <!-- 
                        Displays Account Name if Authenticated.
                        If not Authentication, prompts a login
                    -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p>Welcome, @User.Identity.Name!</p>
                        <a class="btn btn-outline-light btn-lg btn1" href="Identity/Account/Logout" role="button">Logout</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light btn-lg btn1" href="Identity/Account/Login" role="button">Login</a>
                    }

                    <!-- Button to view Exercises without Authentication -->
                    <a class="btn btn-outline-light btn-lg btn2" a asp-controller="Exercise" asp-action="Index" role="button">View Workouts</a>
                    <br>
                </div>
            </div>
        </div>
    </div>

    <br>
    <br>


    <!-- Exercise Card -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img src="/Images/workout5.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Exercises</h5>
                        <p class="card-text">Explore various types of workouts and exercise forms to enhance your fitness journey.</p>
                        <a asp-controller="Exercise" asp-action="Index" class="btn btn-primary">Discover Exercises</a>
                    </div>
                </div>
            </div>

            <!-- Workout Card -->
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img src="/Images/workout5.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Workouts</h5>
                        <p class="card-text">Find curated workout plans and routines tailored to your fitness goals and preferences.</p>
                        <a asp-controller="Workout" asp-action="Index" class="btn btn-primary">Discover Workouts</a>
                    </div>
                </div>
            </div>

            <!-- Tracking Card -->
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img src="/Images/workout5.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Tracking</h5>
                        <p class="card-text">Monitor and analyze your fitness progress and stay motivated on your fitness journey.</p>
                        <a asp-controller="Tracking" asp-action="Index" class="btn btn-primary">Discover Tracking</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</header>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!-- Script to scroll through images-->
<script>
    $(document).ready(function () {
        var currentImageIndex = 0;
        var images = [
            '/Images/workout1.jpg',
            '/Images/workout2.jpg',
            '/Images/workout3.jpg',
            '/Images/workout4.jpg',
            '/Images/workout5.jpg'
        ];

        // Function to change the background image with fade effect
        function changeBackgroundImageWithFade() {
            $('#dynamic-bg').fadeOut(1000, function () {
                // Fade out completed, change the background image
                $('#dynamic-bg').css('background-image', 'url(' + images[currentImageIndex] + ')');
                // Fade in the new image
                $('#dynamic-bg').fadeIn(1000);
                currentImageIndex = (currentImageIndex + 1) % images.length;
            });
        }

        // Set up a timer to change the image every 5000 milliseconds (5 seconds)
        setInterval(changeBackgroundImageWithFade, 10000);

        // Initial background image setup
        changeBackgroundImageWithFade();
    });
</script>
