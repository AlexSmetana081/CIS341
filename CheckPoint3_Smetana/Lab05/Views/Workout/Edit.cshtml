@model Lab05.ViewModels.WorkoutDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Workout</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkoutId" />

            <!-- Workout Name -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <!-- Workout Description -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Author Name -->
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select class="form-select" asp-for="AuthorId" asp-items="ViewBag.AccountList">
                </select>
            </div>

            <!-- Exercises -->
            <div class="form-group">
                <label asp-for="Exercises" class="control-label"></label>
                <select class="form-select" asp-for="Exercises" asp-items="ViewBag.WorkoutSetList" multiple>
                </select>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<!-- Link back to list -->
<div>
    <a asp-action="Index">Back to List</a>
</div>

<!-- Scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
